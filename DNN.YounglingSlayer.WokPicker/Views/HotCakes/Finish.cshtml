@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<IEnumerable<DNN.WokPickerDNN.YounglingSlayer.WokPicker.Models.Card>>

@using System.Text.RegularExpressions
@using DotNetNuke.Web.Mvc.Helpers
@using System.Linq
@using Dnn.Modules.Console







<div id="Items-@Dnn.ModuleContext.ModuleId" class="WokPicker_MainDiv">

    <div class="WokPicker_card_TextPage finish">
        <h1>
            A(z) @ViewBag.ProductName.ToLower().Trim() a kosaradba került!
        </h1>
        <h2>
            Az alábbi összetevőket választottad
        </h2>
    </div>


        <div class="WokPicker_card_container">
            @foreach (var item in Model)
            {
                <div class="WokPicker_card">
                    <div class="WokPicker_Img">
                        <img class="main" src=@item.Item.ImageFileSmall alt="teszt">
                        <img class="spicy" @(item.Spicy ? "" : "hidden") src="/DesktopModules/MVC/DNN.YounglingSlayer.WokPicker/Images/spicy.png" />
                    </div>
                    <p class="WokPicker_card_title">
                        @item.TranslatedName
                    </p>

                </div>
            }
        </div>


        <div class="WokPicker_card_TextPage finish">
            <div class="WokPicker_navbuttons">
                <a class="btn btn-primary" href="@Hotcakes.Commerce.Urls.HccUrlBuilder.RouteHccUrl(Hotcakes.Commerce.Urls.HccRoute.Cart)">Irány a kosár!</a>
                <a class="btn btn-secondary" href=@Url.Action("Index", "Hotcakes")>Új @ViewBag.ProductName.ToLower().Trim() készítése</a>
            </div>
        </div>


    </div>
