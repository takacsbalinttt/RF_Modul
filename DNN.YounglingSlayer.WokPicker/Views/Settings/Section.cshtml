@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<DNN.WokPickerDNN.YounglingSlayer.WokPicker.Models.Section>

@using System.Collections.Generic
@using DotNetNuke.Web.Mvc.Helpers
@using DotNetNuke.Web.UI.WebControls


<h2 id="dnnSitePanel-BasicSettings" class="dnnFormSectionHead dnnClear">
    <a href="#" class="dnnSectionExpanded">@Dnn.LocalizeString("BasicSettings")</a>
</h2>
<fieldset>
    <p>hello</p>
    <div class="dnnFormItem">
        <div class="dnnLabel" style="position: relative;">
            @Html.LabelFor(m => Model.Id, new { @class = "col-md-2 control-label" })
        </div>
        @Html.TextBoxFor(m => Model.Id, new { @readonly = "readonly" })
    </div>
    <div class="dnnFormItem">
        <div class="dnnLabel" style="position: relative;">
            @Html.LabelFor(m => Model.Name, new { @class = "col-md-2 control-label" })
        </div>
        @Html.TextBoxFor(m => Model.Name)
    </div>
    <div class="dnnFormItem">
        <div class="dnnLabel" style="position: relative;">
            @Html.LabelFor(m => Model.Description, new { @class = "col-md-2 control-label" })
        </div>
        @Html.TextBoxFor(m => Model.Description)
    </div>
    <div class="dnnFormItem">
        <div class="dnnLabel" style="position: relative;">
            @Html.LabelFor(m => Model.CardCount, new { @class = "col-md-2 control-label" })
        </div>
        @Html.TextBoxFor(m => Model.CardCount)
    </div>
    <div class="dnnFormItem">
        <div class="dnnLabel" style="position: relative;">
            @Html.LabelFor(m => Model.MultiSelect, new { @class = "col-md-2 control-label" })
        </div>
        @Html.CheckBoxFor(m => Model.MultiSelect)
    </div>
    <div class="dnnFormItem">
        <div class="dnnLabel" style="position: relative;">
            @Html.LabelFor(m => Model.Hide, new { @class = "col-md-2 control-label" })
        </div>
        @Html.CheckBoxFor(m => Model.Hide)
    </div>



</fieldset>

<button type="submit" class="dnnPrimaryAction">@Dnn.LocalizeString("Submit")</button>
<a id="cancelEdit" href="#" class="dnnSecondaryAction">@Dnn.LocalizeString("Cancel")</a>

<div style="display: flex">
    @for (int i = 0; i < Model.CardCount; i++)
    {
        <a href=@Url.Action("CardSettings", "Settings", new {ctl = "CardSettings", cardId = i, sectionId= Model.Id })>@Dnn.LocalizeString("EditItem")
        <div class="WokPicker_settings_link">
            <h2>@i-1</h2>
        </div>
        </a>
    }
</div>